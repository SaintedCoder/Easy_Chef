<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
    <name>com_easy_chef</name>
    <version>1.0.0</version>
    <creationDate>August 2025</creationDate>
    <author>Web Lynx</author>
    <description>Easy Chef: A recipe management component</description>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <files folder="admin">
        <filename>easy_chef.php</filename>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
        <folder>sql</folder>
    </files>
    <files folder="site">
        <filename>easy_chef.php</filename>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>
    <administration>
        <menu>Easy Chef</menu>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="layout" type="list" label="Recipe Layout" description="Choose the recipe display layout">
                    <option value="list">List</option>
                    <option value="card">Card</option>
                </field>
                <field name="category_layout" type="list" label="Category Layout" description="Choose the category display layout">
                    <option value="list">List</option>
                    <option value="grid">Grid</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>